<%= simple_form_for(@component) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :author %>
    <%= f.input :version %>
    <%= f.input :website %>
    <%= f.input :repository %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
